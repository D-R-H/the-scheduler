<h1>
  <span class="glyphicon glyphicon-user" aria-hidden="true"></span> People
  {{#link-to "person" "new" class="btn btn-primary pull-right"}}Add Person{{/link-to}}
</h1>

{{#if model}}
<table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Groups</th>
        <th>Assignment Frequency</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    {{#each model as |person|}}
      <tr>
        <td>{{person.name}}</td>
        <td>
          <span class="label label-default">Sound</span>
          <span class="label label-default">Stage</span>
          <span class="label label-default">Microphones</span>
        </td>
        <td>{{person.assignmentFrequency}} weeks</td>
        <td class="text-right"><a {{action "delete" person}} class="glyphicon glyphicon-trash" aria-hidden="true"></a></td>
      </tr>
    {{/each}}
    </tbody>
</table>
{{/if}}

{{outlet}}
