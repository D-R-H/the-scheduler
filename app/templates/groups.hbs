<h1>
  <span class="glyphicon glyphicon-tag" aria-hidden="true"></span> Groups
  <a href="/group/new" class="btn btn-primary pull-right">Add Group</a>
</h1>

{{#if model}}
<table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Members</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    {{#each model as |group|}}
      <tr>
        <td>{{group.name}}</td>
        <td>[count]</td>
        <td class="text-right"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></td>
      </tr>
    {{/each}}
    </tbody>
</table>
{{/if}}

{{outlet}}
