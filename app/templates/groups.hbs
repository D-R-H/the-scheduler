<h1>
  <span class="glyphicon glyphicon-tag" aria-hidden="true"></span> Groups
  {{#link-to "group" "new" class="btn btn-primary pull-right"}}Add Group{{/link-to}}
</h1>

{{#if model}}
<table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>People</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    {{#each model as |group|}}
      {{#link-to "group" group tagName="tr"}}
        <td>{{group.name}}</td>
        <td>{{group.people.length}}</td>
        <td class="text-right"><a {{action "delete" group}} class="glyphicon glyphicon-trash" aria-hidden="true"></a></td>
      {{/link-to}}
    {{/each}}
    </tbody>
</table>
{{/if}}

{{outlet}}
