<h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Settings</h1>

<h2>Meeting Dates</h2>
<form>
  <div class="form-group">
    <label for="midweek-meeting">Midweek meeting is on</label>
    <select class="form-control" id="midweek-meeting" onchange={{action "changeMidweekMeeting" value="target.value"}}>
      {{#each weekdays as |day index|}}
        <option value="{{day}}" selected="{{if (eq model.midweekMeeting day) 'selected'}}">{{day}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="weekend-meeting">Weekend meeting is on</label>
    <select class="form-control" id="weekend-meeting" onchange={{action "changeWeekendMeeting" value="target.value"}}>
      {{#each weekdays as |day index|}}
        <option value="{{day}}" selected="{{if (eq model.weekendMeeting day) 'selected'}}">{{day}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <button {{action "save"}} type="submit" class="btn btn-primary">Save</button>
    <button {{action "cancel"}} type="button" class="btn btn-link">Cancel</button>
  </div>
</form>

{{outlet}}
